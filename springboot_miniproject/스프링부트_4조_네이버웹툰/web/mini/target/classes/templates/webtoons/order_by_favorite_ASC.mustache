{{>layouts/header}}

<style>
    .center-text {
        text-align: center;
        color: black !important;
        font-weight: bold;
        font-size: 18px;
        margin: 10px 0;
    }

    /* 테이블 스타일 설정 */
    table {
        color: black !important;
    }

    /* 링크 스타일 설정 */
    a {
        text-decoration: none;
    }
    
    /* 마우스가 올라갔을 때 이미지 확대 */
    .webtoon-card img:hover {
        transform: scale(1.05); /* 확대 효과 */
        transition-duration: 0.5s; /* 부드러운 전환 */
    }

    .webtoon-card img {
        max-width: 100%; /* 이미지의 최대 너비를 컨테이너에 맞게 설정 */
        height: auto; /* 비율 유지를 위해 높이 자동 조정 */
        transition-duration: 0.5s; /* 부드러운 전환 */
    }

    /* 마우스가 올라갔을 때 텍스트 밑줄 */
    .webtoon-card .center-text:hover {
        text-decoration-line : underline;
    }

    /* 추가 스타일 설정 */
    .webtoon-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .webtoon-card {
        width: calc(20% - 20px);
        margin: 10px 0;
        text-align: center;
    }

    /* order title 스타일 설정 */
    .order-title {
        font-size: 35px;
        color: white;
        font-weight: bold;
        background-color: #04B45F;
        padding: 5px;
        margin-bottom: 10px;
        text-align: center;
    }
    
</style>

<div class="container">
    <p class="order-title">관심도 오름차순 정렬</p>
    <div class="webtoon-container">
        {{#favoriteASC}}
        <div class="webtoon-card">
            <div class="center-text" style="font-size: 18px; font-weight: bold;font-family: 'Sunflower', sans-serif; background-color: #E6F8E0; color: white; padding: 5px;">
                관심도 : <strong>{{favorite}}</strong>
            </div>
            <a href="/webtoons/{{webtoonId}}">
                <img src="{{thumbnailUrl}}" alt="Thumbnail">
                <p class="center-text">{{title}}</p>
            </a>
        </div>
        {{/favoriteASC}}
    </div>
</div>

{{>layouts/footer}}